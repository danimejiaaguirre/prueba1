<%- model_class = Curso -%>
<div class="page-header">
  <h1 id="cu">Cursos</h1>
  <%= form_tag request.path, :method => 'get' do %>
      <%= content_tag :label do %>
      Nombre Cursos:
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Consultar", :nombre => nil %>
    <% end %>
  <% end %>
  

</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'nombre' %></th>
      <th><%= sortable 'ficha' %></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cursos  %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Curso', new_curso_path, :remote => true, :class => 'btn btn-primary' %></td>
    </tr>
  </tfoot>
</table>
<div align="center">
  <%= will_paginate @cursos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;'  rescue nil %>
</div>
<p>
  Total Cursos : <%= @cursos.total_entries %>
</p>

<%= form_tag request.path, :method => 'get' do %> 
    <%= content_tag :label do %> 
      Seleccione numero de registros por pagina:
      <br>
      <%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
      <%= submit_tag "Aceptar", :nombre => nil %> 
    <% end %> 
  <% end %>
