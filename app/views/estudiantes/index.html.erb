<%- model_class = Estudiante -%>
<div class="page-header">
  <h1 id="est">Estudiantes <%= @curso.nombre %></h1>
  <br>
  <hr>
  <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
      Nombre Estudiante:
      <%= search_field_tag :search, params[:search], :placeholder => "nombre, cedula, direccion, email" %>
      <%= submit_tag "Consultar", :Nombre => nil %>
    <% end %>
  <% end %>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>foto</th>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'nombre' %></th>
      <th><%= sortable 'curso_id','curso' %></th>
      <th><%= sortable 'cedula','documento' %></th>
      <th><%= sortable 'direccion' %></th>
      <th><%= sortable 'email' %></th>
      <th><%= sortable 'Fch_nacimiento' %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @estudiantes %>
  </tbody>
  <tfoot>
    <tr>
     
    </tr>
    <br>
  </tfoot>
</table>
 <%= link_to 'Nuevo Estudiante', new_curso_estudiante_path, :class => 'btn btn-primary', :remote => true %> 
 <%= link_to 'Atras', cursos_path, :class => 'btn btn-info' %>

<div align="center">

<%= will_paginate @estudiantes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
  <br><br><hr>
Total Estudiantes : <%= @estudiantes.total_entries %>
</p>

Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='estudiantes' >
  <select name='limit' onchange='actualizar();'>
    <option value = '2'></option>
    <option value = '2'>2</option>
    <option value = '4'>4</option>
    <option value = '6'>6</option>
  </select>
</form>
