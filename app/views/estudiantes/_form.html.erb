<%= simple_form_for([@curso, @estudiante], :html => { :multipart => true, :class => 'form-horizontal'}) do |f| %>

  <%= f.error_notification %>
  <%= f.file_field :foto %>

  <%= f.input :nombre, :label => "Nombre" %>
  <%= f.input :cedula, :label => "Cedula" %>
  <%= f.input :direccion, :label => "Direccion" %>
  <%= f.input :email, :label => "Email" %>
 <%= f.input :fch_nacimiento, as: :date, start_year: Date.today.year - 50, end_year: Date.today.year - 10, accept_day: true, order: [:day, :month, :year] %>
 
   <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', curso_estudiantes_path, :class => 'btn btn-small' %>
  </div>
<% end %>