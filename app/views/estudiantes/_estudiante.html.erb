<tr id=<%= "estudiante_#{estudiante.id}" %>>
  <td><%= image_tag estudiante.foto.url(:lsmall) %></td>
  <td><%= estudiante.id %></td>
  <td><%= estudiante.nombre %></td>
  <td><%= estudiante.curso.nombre %></td>
  <td><%= estudiante.cedula %></td>
  <td><%= estudiante.direccion %></td>
  <td><%= estudiante.email %></td>
  <td><%= estudiante.fch_nacimiento %></td>

  <td>
    <%= link_to 'Mostrar', curso_estudiante_path(@curso, estudiante), :remote => true, :class => 'btn btn-mini btn-warning' %>

    <%= link_to 'Editar', edit_curso_estudiante_path(@curso, estudiante), :remote => true,:class => 'btn btn-mini btn-success' %>

    <%= link_to 'Eliminar', curso_estudiante_path(@curso, estudiante), 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
        
  </td>
</tr>

