<%= simple_form_for(@maestro, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  

  <%= f.input :nombre %>
  <%= f.input :curso_id %>
  <%= f.input :cedula %>
  <%= f.input :direccion %>
  <%= f.input :telefono %>
  <%= f.input :fch_nacimiento, as: :date, start_year: Date.today.year - 50, end_year: Date.today.year - 10, accept_day: true, order: [:day, :month, :year] %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                maestros_path, :class => 'btn' %>
  </div>
<% end %>

