<%- model_class = Maestro -%>
<div class="page-header">
  <h1 id="mae">Maestros</h1>
  <br>
  <hr>
  <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
      Nombre Maestros:
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Consultar", :nombre => nil %>
    <% end %>
  <% end %>
  <br />

</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'nombre' %></th>
      <th><%= sortable 'curso_id' %></th>
      <th><%= sortable 'cedula' %></th>
      <th><%= sortable 'direccion' %></th>
      <th><%= sortable 'email' %></th>
      <th><%= sortable 'fch_nacimiento' %></th>
      <th><%= sortable 'materia_id' %></th>
      <th><%= sortable 'telefono' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @maestros %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Maestro', new_maestro_path, :remote => true, :class => 'btn btn-primary' %></td>
    </tr>
  </tfoot>
</table>
<div align="center">
<%= will_paginate @maestros, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total maestros : <%= @maestros.total_entries %>
</p>
<hr>
Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='maestros' >
  <select name='limit' onchange='actualizar();'>
    <option value = '2'></option>
    <option value = '2'>2</option>
    <option value = '4'>4</option>
    <option value = '6'>6</option>
  </select>
</form>